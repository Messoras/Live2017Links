--Noctovision Dragon
function c511020201.initial_effect(c)
    --protect face-down
    local e1=Effect.CreateEffect(c)
    e1:SetDescription(aux.Stringid(20201,0))
    e1:SetCategory(CATEGORY_NEGATE+CATEGORY_DISABLE)
    e1:SetType(EFFECT_TYPE_QUICK_O)
    e1:SetCode(EVENT_CHAINING)
    e1:SetProperty(EFFECT_FLAG_DAMAGE_STEP+EFFECT_FLAG_DAMAGE_CAL)
    e1:SetRange(LOCATION_GRAVE)
    e1:SetCondition(c511020201.discon)
    e1:SetCost(aux.bfgcost)
    e1:SetTarget(c511020201.distg)
    e1:SetOperation(c511020201.disop)
    c:RegisterEffect(e1)
    --Draw
    local e2=Effect.CreateEffect(c)
    e2:SetDescription(aux.Stringid(20201,1))
    e2:SetCategory(CATEGORY_DRAW)
    e2:SetType(EFFECT_TYPE_SINGLE+EFFECT_TYPE_TRIGGER_O)
    e2:SetCode(EVENT_BE_MATERIAL)
    e2:SetProperty(EFFECT_FLAG_PLAYER_TARGET+EFFECT_FLAG_DELAY)
    e2:SetCountLimit(1,202011)
    e2:SetCondition(c511020201.drawcon)
    e2:SetTarget(c511020201.drawtg)
    e2:SetOperation(c511020201.drawop)
    c:RegisterEffect(e2)
    --special summon
    local e3=Effect.CreateEffect(c)
    e3:SetDescription(aux.Stringid(20201,2))
    e3:SetCategory(CATEGORY_SPECIAL_SUMMON)
    e3:SetType(EFFECT_TYPE_FIELD+EFFECT_TYPE_TRIGGER_O)
    e3:SetProperty(EFFECT_FLAG_DELAY)
    e3:SetCode(EVENT_SPSUMMON_SUCCESS)
    e3:SetRange(LOCATION_HAND)
    e3:SetCountLimit(1,202012)
    e3:SetCondition(c511020201.spcon)
    e3:SetTarget(c511020201.sptg)
    e3:SetOperation(c511020201.spop)
    c:RegisterEffect(e3)
end
function c511020201.extrafilter(c)
    return c:IsType(TYPE_MONSTER) and (c:GetSequence() == 5 or c:GetSequence() == 6)
end
function c511020201.tfilter(c,tp)
    return c:IsOnField() and c:IsFacedown() and c:IsControler(tp)
end
function c511020201.discon(e,tp,eg,ep,ev,re,r,rp)
    if not re:IsHasProperty(EFFECT_FLAG_CARD_TARGET) then return false end
    local tg=Duel.GetChainInfo(ev,CHAININFO_TARGET_CARDS)
    return tg and tg:IsExists(c511020201.tfilter,1,nil,tp) and Duel.IsChainNegatable(ev) and Duel.IsExistingMatchingCard(c511020201.extrafilter,tp,LOCATION_MZONE,0,1,nil)
end
function c511020201.distg(e,tp,eg,ep,ev,re,r,rp,chk)
    if chk==0 then return true end
    Duel.SetOperationInfo(0,CATEGORY_NEGATE,eg,1,0,0)
    if re:GetHandler():IsDestructable() and re:GetHandler():IsRelateToEffect(re) then
        Duel.SetOperationInfo(0,CATEGORY_DISABLE,eg,1,0,0)
    end
end
function c511020201.disop(e,tp,eg,ep,ev,re,r,rp)
    if Duel.NegateActivation(ev) and re:GetHandler():IsRelateToEffect(re) then
        local c=e:GetHandler()
        local tg=Duel.GetChainInfo(ev,CHAININFO_TARGET_CARDS)
        local tc=tg:GetFirst()
        local e1=Effect.CreateEffect(c)
        e1:SetType(EFFECT_TYPE_SINGLE)
        e1:SetCode(EFFECT_CANNOT_BE_EFFECT_TARGET)
        e1:SetValue(aux.tgoval)
        e1:SetReset(RESET_EVENT+0x1fe0000+RESET_PHASE+PHASE_END)
        tc:RegisterEffect(e1)
    end
end
function c511020201.drawcon(e,tp,eg,ep,ev,re,r,rp)
    return e:GetHandler():IsLocation(LOCATION_GRAVE) and r==REASON_LINK
end
function c511020201.drawtg(e,tp,eg,ep,ev,re,r,rp,chk)
    if chk==0 then return Duel.IsPlayerCanDraw(tp,1) end
    Duel.SetTargetPlayer(tp)
    Duel.SetTargetParam(1)
    Duel.SetOperationInfo(0,CATEGORY_DRAW,nil,0,tp,1)
end
function c511020201.drawop(e,tp,eg,ep,ev,re,r,rp)
    local p,d=Duel.GetChainInfo(0,CHAININFO_TARGET_PLAYER,CHAININFO_TARGET_PARAM)
    Duel.Draw(p,d,REASON_EFFECT)
end
function c511020201.cfilter(c,tp)
    return c:IsRace(RACE_DRAGON) and c:IsAttribute(ATTRIBUTE_DARK) and c:IsControler(tp)
end
function c511020201.spcon(e,tp,eg,ep,ev,re,r,rp)
    return eg:IsExists(c511020201.cfilter,1,nil,tp)
end
function c511020201.sptg(e,tp,eg,ep,ev,re,r,rp,chk)
    if chk==0 then return Duel.GetLocationCount(tp,LOCATION_MZONE)>0
        and e:GetHandler():IsCanBeSpecialSummoned(e,0,tp,false,false) end
    Duel.SetOperationInfo(0,CATEGORY_SPECIAL_SUMMON,e:GetHandler(),1,0,0)
end
function c511020201.spop(e,tp,eg,ep,ev,re,r,rp)
    local c=e:GetHandler()
    if c:IsRelateToEffect(e) then
        Duel.SpecialSummon(c,0,tp,tp,false,false,POS_FACEUP)
    end
end
